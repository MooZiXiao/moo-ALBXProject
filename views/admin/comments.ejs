<%-include('./layouts/admin-header.ejs')%>
  <div class="main">
    <%-include('./layouts/admin-navbar.ejs')%>
    <div class="container-fluid">
      <div class="page-title">
        <h1>所有评论</h1>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger" hidden>
        <strong>错误！</strong><span>发生XXX错误</span>
      </div>
      <div class="page-action">
        <!-- show when multiple checked -->
        <div class="btn-batch" style="display: none">
          <button class="btn btn-info btn-sm btnSaves">批量批准</button>
          <button class="btn btn-warning btn-sm btnRefuces">批量拒绝</button>
          <button class="btn btn-danger btn-sm btnDels">批量删除</button>
        </div>
        <ul class="pagination pagination-sm pull-right" style="float:right">
          <li><a href="#">上一页</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">下一页</a></li>
        </ul>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center" width="40"><input type="checkbox" class='ckAll'></th>
            <th>作者</th>
            <th>评论</th>
            <th>评论在</th>
            <th>提交于</th>
            <th>状态</th>
            <th class="text-center" width="100">操作</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
  <%-include('./layouts/admin-aside.ejs')%>
<%-include('./layouts/admin-footer.ejs')%>
<script src='/assets/vendors/template/template-web.js'></script>
<script type='text/template' id='commentsTemp'>
  {{ each data val index }}
    <tr class="{{ val.status === 'danger' ? 'danger' : '' }}">
      <td class="text-center"><input type="checkbox" class='ck' data-id='{{ val.id }}'></td>
      <td>{{ val.author }}</td>
      <td>{{ val.content }}</td>
      <td>{{ val.title }}</td>
      <td>{{ val.created }}</td>
      <td>{{ val.status === 'approved' ? '已批准' : val.status === 'held' ? '未批准' : '驳回' }}</td>
      <td class="text-center">
        <a href="javascript:;" class="btn btn-info btn-xs btnSave" data-id='{{ val.id }}'>批准</a>
        <a href="javascript:;" class="btn btn-danger btn-xs btnDel" data-id='{{ val.id }}'>删除</a>
      </td>
    </tr>
  {{ /each }}
</script>
<script src='/assets/vendors/bootstrappaginator/bootstrap-paginator.min.js'></script>
<script src='/assets/js/comments.js'></script>
